Emoji {
    // Unsicher ob + notwendig/ sinnvoll/ gut ist
    Functionality = Input+ | Output+ | Variable+ | Condition+ | Loop+
        
    Input = Input_Emoji+ Arrow_Right Variable_Emoji
    Output = Variable_Emoji Arrow_Right Output_Emoji
	Variable = Variable_Emoji Arrow_Left Input_Emoji+
    Condition = Condition_Identifier_Emoji
    Loop = Loop_Emoji        

    Arrow_Right = ":arrow_right:" | "➡️"
    Arrow_Left = ":arrow_left:" | "⬅️"

    Input_Emoji = ":memo:" | "📝" | ":microphone:" | "🎤" | ":microphone_studio:" | "🎙️" | ":camera_with_flash:" | "📸" | ":camera:" | "📷" | ":framed_picture:" | "🖼️"
    Output_Emoji = ":speech:" | "💬" | ":loud_sound:" | "🔊" | ":megaphone:" | "📢" | ":robot:" | "🤖" | ":satellite:" | "📡"
	Variable_Emoji = ":cardfilebox:" | "🗃️"

    Condition_Identifier_Emoji = ":question:" | "❓"
    Condition_True_Emoji = ":thumbs_up:" | "👍"
    Condition_False_Emoji = ":thumbs_down:" | "👎"
    
    Loop_Emoji = ":repeat:" | "🔁"
 
    
    // TextOrNumeric =  letter+ number* | number+ letter*
    // letter is provided natively by Ohm
    Letters = letter+
    SpecialCharacters = "!" | "?" | "<" | ">" | "§" | "$" | "&" | "/" | "," | ";" | "." | ":" | "_" | "#" | "'" | "~" | "|" | "^" | "′"
    
    ident  (an identifier)
    = letter alnum*
    
    number  (a number)
    = digit* "." digit+  -- fract
    | digit+             -- whole
}
